<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".NewItemActivity" >

    <Button
        android:id="@+id/cancelButton"
        android:layout_width="157dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="#66cccc"
        android:textColor="#FFFFFF"
        android:text="@string/cancel_button" />

    <Button
        android:id="@+id/saveButton"
        android:layout_width="157dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/cancelButton"
        android:layout_alignBottom="@+id/cancelButton"
        android:layout_alignParentLeft="true"
        android:background="#66cccc"
        android:textColor="#FFFFFF"
        android:text="@string/save_button" />

        <Button
            android:id="@+id/showPopUpButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="19dp"
            android:text="Pop Up Demo" />

        <EditText
            android:id="@+id/itemText"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/cancelButton"
            android:layout_marginTop="28dp"
            android:ems="10"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:hint="Item Name" />

        <EditText
            android:id="@+id/editText1"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/itemText"
            android:layout_alignBottom="@+id/itemText"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@+id/itemText"
            android:ems="10"
            android:inputType="number"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:hint="#" />

</RelativeLayout>